<h1>User Profile</h1>

<p>Name: <%= @user.name %></p>
<p>Role: <%= @user.role %></p>
<p>Email: <%= @user.email %></p>

<h5>Addresses:</h5>
<% @user.addresses.each do |address| %>
  <div class="address-<%= address.id %>">
    <h6><%= address.nickname %></h6>
    <p>Street: <%= address.street %></p>
    <p>State: <%= address.state %></p>
    <p>City: <%= address.city %></p>
    <p>Zip code: <%= address.zip %></p>
    <%= link_to 'Edit Address', edit_address_path(address) %>
  </div>
<% end %>

<%= link_to 'Add an Address', new_address_path  %>

<% if @user == current_user %>
<%= link_to "Edit", edit_profile_path %>
<% elsif current_admin? %>
<%= link_to 'Edit', edit_admin_user_path(@user) %>
<% end %>

<% unless @user.orders.empty? %>
  <% if @user.id == current_user.id %>
  <%= link_to 'See all Orders', profile_orders_path %>
  <% elsif current_admin? %>
  <%= link_to 'See all Orders', admin_user_orders_path(@user) %>
  <% end %>
<% end %>
