<%= render partial: "card", locals: {item: @item, img_width: 300}%>
<% if @item.average_rating %>
  Average Rating: <%= @item.average_rating.round(1) %>/5.0
<% else %>
  Not Yet Rated
<% end %>

<% @item.all_reviews.each do |review| %>
    <%= tag.div class: "review-#{review.id}" do %>
      <%= review.title %>
      <%= review.username %>
      <%= review.description %>
      <%= review.rating %>/5
      <% unless review.created_at == review.updated_at %>
        Updated at: <%=  review.updated_at %>
      <% end %>
    <% end %>
<% end %>
